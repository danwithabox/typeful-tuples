{
    "exclude": [
        "lib",
        "eslint.config.js",
        ".tsup"
    ],
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2017",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "types": [
            "node"
        ]
    }
}
